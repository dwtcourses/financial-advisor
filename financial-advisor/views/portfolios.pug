extends layout

block content
  .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
    h1.page-header Portfolios
    .table-responsive
        table.table.table-striped
          thead
            tr
              th Portfolio ID
              th Client ID
              th Client
              th Target Date
              th Strategy
              th Total Value
              th Remaining Funds
              th Details
          tbody
            each val in portfolios
              tr
                td= val.portfolio_id
                td= val.client_id
                td= val.client_name
                td= val.target_date.slice(0, 10)
                td= val.strategy
                td= val.value || 0.0
                td= val.remaining_funds
                td
                  a(href='/portfolios/details/' + val.portfolio_id) Details
                //- th ${val.value} Current value based on stock prices
    form
      button.btn.btn-primary(formaction='/portfolios/add') Add



