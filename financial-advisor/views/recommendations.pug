extends layout

block content
  .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
    .page-header
      h1 Recommendations
    .table-responsive
        table.table.table-striped
          thead
            tr
              th Recommendation ID
              th Portfolio ID
              th Client ID
              th Client Name
              th Security
              th Ticker
              th Transaction Type
              th Quantity
              th Submission Timestamp
              th Delete
          tbody
            each val in recommendations
              tr
                td= val.recommendation_id
                td= val.portfolio_id
                td= val.client_id
                td= val.client_name
                td= val.security_name
                td= val.ticker
                td= val.transaction_type
                td= val.quantity
                td= val.submission_timestamp
                td
                  a(href='/recommendations/delete/' + val.recommendation_id) Delete
    form
      button.btn.btn-primary(formaction='/recommendations/add') Add



